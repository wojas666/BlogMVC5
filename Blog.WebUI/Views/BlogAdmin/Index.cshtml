@using Blog.Domain.Entity;
@model IEnumerable<Topic>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">Twoje Tematy:</div>
    <table class="table table-striped">
        <tr><th>Title</th><th>Added Date</th><th></th></tr>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="3" class="text-center">Brak jakichkolwiek tematów!</td></tr>
        }
        else
        {
            foreach(Topic topic in Model)
            {
                <tr>
                    <td>@topic.Title</td>
                    <td>@topic.AddedDate</td>
                    <td>@Html.ActionLink("Edytuj", "Edit", new { topicID = topic.TitleID })</td>
                    <td>@Html.ActionLink("Usuń", "Remove", new { topicID = topic.TitleID })</td>
                </tr>
            }
        }
    </table>
    @Html.ActionLink("Utwórz Temat", "Create");
</div>


